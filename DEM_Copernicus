
var area = ee.FeatureCollection("Ingresa_la_geometria_aqu칤");

var dataset = ee.ImageCollection('COPERNICUS/DEM/GLO30');
var elevacion = dataset.select('DEM').mosaic().clip(area);

var elevationVis = {
  min: 0,
  max: 2700.0,
  palette: [
  "0000ff", "0040ff", "0080ff", "00c0c0", "00ff00",
  "80ff00", "ffff00", "ff8000", "ff0000", "800000"
],
};
Map.centerObject(area, 8);
Map.addLayer(elevacion, elevationVis, 'DEM');
// Obtener la proyecci칩n correcta desde la primera imagen del dataset
var proj = dataset.first().select(0).projection();

// 游댳 Calcular la pendiente en GRADOS
var pendienteGrados = ee.Terrain.slope(elevacion.setDefaultProjection(proj)).clip(area);
var pendienteGradosVis = {
  min: 0,
  max: 45,  // Escala adecuada para la mayor칤a de los terrenos
  palette: ['green', 'yellow', 'red']
};
Map.addLayer(pendienteGrados, pendienteGradosVis, 'Pendiente (춿)');

// 游댳 Convertir la pendiente de grados a PORCENTAJE
var pendientePorcentaje = pendienteGrados.expression(
  "tan(slope * 3.141592653589793 / 180) * 100",  // Conversi칩n a porcentaje
  {
    "slope": pendienteGrados
  }
).rename('Pendiente_%').clip(area);

// Visualizaci칩n de la pendiente en porcentaje
var pendientePorcentajeVis = {
  min: 0,
  max: 100,  // Ajusta seg칰n la regi칩n
  palette: ['blue', 'green', 'yellow', 'red']
};
Map.addLayer(pendientePorcentaje, pendientePorcentajeVis, 'Pendiente (%)');


// 游댳 Exportar DEM recortado
Export.image.toDrive({
  image: elevacion,
  description: 'DEM',
  folder: 'GEE_Exports',  // Carpeta en Google Drive
  fileNamePrefix: 'DEM',
  scale: 30,  // Resoluci칩n en metros
  region: area.geometry().bounds(),
  maxPixels: 1e13
});

// 游댳 Exportar Pendiente en Grados
Export.image.toDrive({
  image: pendienteGrados,
  description: 'Pendiente_Grados',
  folder: 'GEE_Exports',
  fileNamePrefix: 'Pendiente_Grados',
  scale: 3000,
  region: area.geometry().bounds(),
  maxPixels: 1e13
});

// 游댳 Exportar Pendiente en Porcentaje
Export.image.toDrive({
  image: pendientePorcentaje,
  description: 'Pendiente_Porcentaje',
  folder: 'GEE_Exports',
  fileNamePrefix: 'Pendiente_Porcentaje',
  scale: 30,
  region: area.geometry().bounds(),
  maxPixels: 1e13
});

print("游 Exportaciones a Google Drive en proceso... Revisa Google Drive en la carpeta 'GEE_Exports'.");


// Calcular estad칤sticas del DEM dentro del 치rea de inter칠s
var stats = elevacion.reduceRegion({
  reducer: ee.Reducer.min()
            .combine(ee.Reducer.max(), '', true)
            .combine(ee.Reducer.mean(), '', true)
            .combine(ee.Reducer.median(), '', true)
            .combine(ee.Reducer.stdDev(), '', true),
  geometry: area.geometry(),
  scale: 30,  // Resoluci칩n en metros
  maxPixels: 1e13
});

// Imprimir estad칤sticas en la consola de GEE
print('游늵 Estad칤sticas del DEM:', stats);
